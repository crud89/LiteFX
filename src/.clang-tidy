Checks: |
    clang-analyzer-*,
    cppcoreguidelines-*,
    bugprone-*,
    -clang-analyzer-optin.core.EnumCastOutOfRange,
    -bugprone-macro-parentheses,
    -bugprone-easily-swappable-parameters
WarningsAsErrors: true
HeaderFilterRegex: '.*'
CheckOptions:
  - key:   cppcoreguidelines-rvalue-reference-param-not-moved.AllowPartialMove
    value: true